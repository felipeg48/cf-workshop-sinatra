  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pivotal CF Workshop | All Attendees</title>
    <link rel="stylesheet" href="css/foundation.css" />
    <script src="js/modernizr.js"></script>
  </head>
  <body>

    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <h1><a href="index">Pivotal CF</a></h1>
        </li>
      </ul>
      <section class="top-bar-section">
        <ul class="right">
          <li><a href="index">Home</a></li>
          <li><a href="attendees">Attendees</a></li>
        </ul>
      </section>
    </nav>

    <div class="row">
      <div class="large-12 columns">
        <h3>All Attendees</h3>
        <hr/>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <table>
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Address</th>
              <th>City</th>
              <th>State</th>
              <th>Zip Code</th>
              <th>Phone</th>
              <th>Email Address</th>
            </tr>
          </thead>
          <tbody>
          <% for attendee in @attendees %>
            <tr>
              <td><a href="sessions?attendeeId=<%= attendee.id %>"><%= attendee.firstName %></a></td>
              <td><%= attendee.lastName %></td>
              <td><%= attendee.firstName %></td>
              <td><%= attendee.city %></td>
              <td><%= attendee.state %></td>
              <td><%= attendee.zipCode %></td>
              <td><%= attendee.phoneNumber %></td>
              <td><%= attendee.emailAddress %></td>
            </tr>
          <% end %>
           </tbody>
        </table>
      </div>
    </div>

    <script src="js/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>

    </body>
